            padding-top: 40px;
            text-align: center;
            letter-spacing: 3px;
            -webkit-text-stroke-width: 1px;
            -webkit-text-stroke-color: #000;
            text-shadow: 2px 2px 0px #000;
        }

    .blog-item-background {
        position: relative;
        top: 0;
        left: 0;
        width: 100%;
        height: 100px;
        background: url('../../Content/img/blurred_sea.jpg');
        background-size: cover;
        opacity: 1;
        -webkit-filter: sepia(50%) saturate(2);
    }

    .blog-item-data {
