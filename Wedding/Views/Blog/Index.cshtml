    }

    .blog-item-content {
        margin-top: 20px;
        margin-bottom: 20px;
        font-size: 13px;
        padding-left: 20px;
        padding-right: 20px;
        text-align: left;
        line-height: 150%;
        font-family: 'Special Elite', cursive;
    }

        .blog-item-content::first-letter {
