<style type="text/css">
    .blog-item-header {
        top: 0;
        left: 0;
        width: 100%;
        position: absolute;
        text-align: center;
    }

        .blog-item-header > p {
            position: relative;
            font-family: 'Pacifico', cursive;
            /*font-family: 'Skranji', cursive;*/
            color: #fff;
            /*color:#bb6700;*/
